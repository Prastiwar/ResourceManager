<UserControl x:Class="RPGDataEditor.Wpf.Quest.Views.QuestEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:RPGDataEditor.Wpf.Controls"
             Style="{DynamicResource DefaultEditorControl}">
    <StackPanel Margin="10">
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Title" />
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Message" />
        <materialDesign:Card HorizontalContentAlignment="Center"
                             DataContext="{Binding Model}"
                             Margin="5"
                             Padding="5">
            <StackPanel>
                <TextBlock Text="Choose completion task"
                           Margin="5" />
                <controls:QuestTaskView DataContext="{Binding CompletionTask}"
                                        TypeChange="CompletionQuestTaskView_TypeChange"
                                        Grid.Column="1" />
            </StackPanel>
        </materialDesign:Card>
        <controls:ListDataCard x:Name="TasksListDataCard"
                               AddItemCommand="{Binding DataContext.AddTaskCommand, RelativeSource={RelativeSource AncestorType=StackPanel}}"
                               DataContext="{Binding Model}"
                               HeaderText="{Binding Tasks.Count, StringFormat='({0}) Tasks'}"
                               ItemsSource="{Binding Tasks}">
            <DataTemplate>
                <controls:QuestTaskView DataContext="{Binding .}"
                                        TypeChange="QuestTaskViewList_TypeChange"/>
            </DataTemplate>
        </controls:ListDataCard>
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Requirements" />
    </StackPanel>
</UserControl>
