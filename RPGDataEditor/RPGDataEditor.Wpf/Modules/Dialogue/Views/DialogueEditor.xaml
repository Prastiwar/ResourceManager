<UserControl x:Class="RPGDataEditor.Wpf.Dialogue.Views.DialogueEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:RPGDataEditor.Wpf.Controls"
             Style="{DynamicResource DefaultEditorControl}">
    <StackPanel Margin="10">
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Title" />
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Message" />
        <controls:AutoGeneratedControl DataContext="{Binding Model}"
                                       PropertyName="AllowEscape" />
        <materialDesign:Card HorizontalContentAlignment="Center"
                             Margin="5"
                             Padding="5">
            <controls:ResourcePicker EmptyText="Select Start Quest"
                                     DataContext="{Binding Model}"
                                     PickedId="{Binding StartQuest, Mode=TwoWay}"
                                     Resource="Quest" />
        </materialDesign:Card>
        <controls:ListDataCard AddItemCommand="{Binding DataContext.AddOptionCommand, RelativeSource={RelativeSource AncestorType=StackPanel}}"
                               HeaderText="{Binding Options.Count, StringFormat='({0}) Options'}"
                               DataContext="{Binding Model}"
                               ItemsSource="{Binding Options}">
            <DataTemplate>
                <controls:DialogueOptionView TypeChange="DialogueOptionView_TypeChange" />
            </DataTemplate>
        </controls:ListDataCard>
        <controls:AutoGeneratedControl PropertyContext="{Binding Model}"
                                       PropertyName="Requirements" />
    </StackPanel>
</UserControl>
