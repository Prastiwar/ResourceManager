<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:RPGDataEditor.Wpf.Controls">
    <DataTemplate x:Key="EntityInteractQuestTaskContent">
        <StackPanel>
            <controls:ResourcePicker PickedId="{Binding Entity}"
                                     Resource="Npc"
                                     Margin="5" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="KillQuestTaskContent">
        <StackPanel>
            <controls:AutoGeneratedControl PropertyName="Kill" />
            <controls:AutoGeneratedControl PropertyName="Amount" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ReachQuestTaskContent">
        <StackPanel>
            <controls:AutoGeneratedControl PropertyName="Pos" />
            <controls:AutoGeneratedControl PropertyName="Distance" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="LeftBlockInteractQuestTaskContent">
        <StackPanel>
            <controls:AutoGeneratedControl PropertyName="Pos" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="RightBlockInteractQuestTaskContent">
        <StackPanel>
            <controls:AutoGeneratedControl PropertyName="Pos" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="RightItemInteractQuestTaskContent">
        <StackPanel>
            <controls:AutoGeneratedControl PropertyName="Item" />
            <CheckBox x:Name="RespectNBTCheckbox"
                      Content="Should respect NBT?"
                      Margin="5"
                      IsChecked="{Binding RespectNbt, Mode=TwoWay}" />
            <controls:AutoGeneratedControl PropertyName="Nbt"
                                           Visibility="{Binding IsChecked, ElementName=RespectNBTCheckbox, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="DialogueQuestTaskContent">
        <StackPanel>
            <controls:ResourcePicker PickedId="{Binding DialogueId}"
                                     Resource="Dialogue"
                                     Margin="5" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>