<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:controls="clr-namespace:RPGDataEditor.Wpf.Controls">
    <ControlTemplate TargetType="{x:Type controls:RequirementView}"
                     x:Key="RequirementViewTemplate">
        <StackPanel>
            <ComboBox x:Name="RequirementTypeComboBox"
                      materialDesign:HintAssist.Hint="Type"
                      Margin="5"
                      Style="{DynamicResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Name="Dialogue"
                              Content="Dialogue" />
                <ComboBoxItem Name="Quest"
                              Content="Quest" />
                <ComboBoxItem Name="Item"
                              Content="Item" />
            </ComboBox>
            <ContentPresenter x:Name="RequirementContent" />
        </StackPanel>
    </ControlTemplate>
    <Style TargetType="{x:Type controls:RequirementView}">
        <Setter Property="Template"
                Value="{StaticResource RequirementViewTemplate}" />
    </Style>
</ResourceDictionary>