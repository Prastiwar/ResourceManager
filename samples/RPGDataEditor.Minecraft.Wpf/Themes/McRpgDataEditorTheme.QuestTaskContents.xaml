<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:RPGDataEditor.Wpf.Controls;assembly=RPGDataEditor.Wpf">
    <DataTemplate x:Key="RightItemInteractQuestTaskContent">
        <StackPanel>
            <controls:AutoControl PropertyName="Item" />
            <CheckBox x:Name="RespectNBTCheckbox"
                      Content="Should respect NBT?"
                      Margin="5"
                      IsChecked="{Binding RespectNbt, Mode=TwoWay}" />
            <controls:AutoControl PropertyName="Nbt"
                                  Visibility="{Binding IsChecked, ElementName=RespectNBTCheckbox, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>